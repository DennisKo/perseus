{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "noEmit": true
  },
  "exclude": ["node_modules", ".next"]
}
