{
  "name": "perseus-now",
  "version": "0.1.3",
  "license": "ISC",
  "bin": "./cli.js",
  "repository": "DennisKo/perseus",
  "husky": {
    "hooks": {
      "pre-commit": "tsc -p packages/api/tsconfig.json --noEmit && tsc -p packages/www/tsconfig.json --noEmit  && lint-staged"
    }
  },
  "lint-staged": {
    "packages/api/src/**/*.{ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "packages/www/pages/**/*.{js,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "fs-extra": "^7.0.1"
  }
}
