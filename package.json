{
  "private": true,
  "workspaces": [
    "api",
    "www"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "api/src/**/*.{ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "www/pages/**/*.{js,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4"
  }
}
